# .env.template

# Node environment (development, production, test)
NODE_ENV=development

# Application Port
PORT=8080

# JWT Configuration
JWT_ACCESS_KEY_SECRET="your_access_key_secret"
JWT_REFRESH_KEY_SECRET="your_refresh_key_secret"

# Email Configuration for nodemailer
EMAIL_USERNAME="your_email@gmail.com"
EMAIL_PASSWORD="your_email_password"

# Frontend URL for email verification
FRONTEND_URL="http://localhost:3000"

# Rate Limiting Configuration
# General API rate limits
RATE_LIMIT_WINDOW_MS=900000           # 15 minutes (in milliseconds)
RATE_LIMIT_MAX_REQUESTS=300           # Max requests per window (production: 300, development: 1000)

# Authentication endpoint rate limits (stricter)
AUTH_RATE_LIMIT_WINDOW_MS=900000      # 15 minutes
AUTH_RATE_LIMIT_MAX_REQUESTS=10       # Max login attempts per window

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"   # Frontend URL or 'true' for all origins

